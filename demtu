#include <iostream>
#include <string.h>
#define MAXN 200

int DemTuTrongChuoi(const char s[])
{
    int j=0;
    bool k=false;
    for (int i=0; i< strlen(s);i++)
    {
        if (isalpha(s[i])||ispunct(s[i])||isdigit(s[i]))
        {
            if (!k)
            {
                j++;
                k=true;
            }
        } else k=false;
    }
    return j;
}
